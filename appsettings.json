{
    "AppSettings": {
        "AppName": "Dialysis Management System",
        "AppVersion": "1.0.0",
        "DebugMode": false
    },

    "ConnectionStrings": {
        "DefaultConnection": "Server=localhost;Port=3306;Database=dialysis_db;Uid=dialysis_user;Pwd=Dialysis@2026;SslMode=none;AllowUserVariables=True;UseAffectedRows=False;CharSet=utf8mb4;"
    },

    "Database": {
        "Provider": "MySQL",
        "BackupPath": "Backups",
        "EnableAutoBackup": true,
        "BackupScheduleTime": "02:00",
        "BackupRetentionDays": 30,
        "CommandTimeout": 30
    },

    "Security": {
        "EncryptionKey": "YourSecure32CharEncryptionKey!!",
        "EncryptionIV": "YourSecure16IV!!",
        "EncryptAttachments": true,
        "SessionTimeoutMinutes": 30,
        "PasswordMinLength": 8,
        "MaxFailedLoginAttempts": 5,
        "LockoutDurationMinutes": 30,
        "RequirePasswordChange": false,
        "PasswordExpiryDays": 90
    },

    "Audit": {
        "EnableAuditLog": true,
        "AuditLogRetentionDays": 90,
        "LogUserActions": true
    },

    "CloudStorage": {
        "Enabled": false,
        "Provider": "GoogleDrive",
        "GoogleDrive": {
            "ClientId": "",
            "ClientSecret": ""
        },
        "OneDrive": {
            "ClientId": ""
        },
        "Dropbox": {
            "AccessToken": ""
        },
        "FTP": {
            "Server": "",
            "Username": "",
            "Password": "",
            "Port": 21,
            "UseSSL": false
        }
    },

    "Files": {
        "MaxUploadSizeMB": 50,
        "AllowedExtensions": [ ".pdf", ".jpg", ".jpeg", ".png", ".dcm", ".doc", ".docx", ".xls", ".xlsx" ],
        "AttachmentsPath": "Data\\Attachments",
        "ReportsPath": "Reports",
        "TempPath": "Temp"
    },

    "UI": {
        "DefaultCulture": "it-IT",
        "DateFormat": "dd/MM/yyyy",
        "DateTimeFormat": "dd/MM/yyyy HH:mm",
        "TimeFormat": "HH:mm",
        "EnableAutoComplete": true,
        "GridPageSize": 50
    },

    "Notifications": {
        "EnableEmailNotifications": false,
        "SMTP": {
            "Server": "smtp.gmail.com",
            "Port": 587,
            "Username": "",
            "Password": "",
            "EnableSSL": true,
            "From": "noreply@dialisi.it"
        }
    },

    "Alerts": {
        "EnableAlerts": true,
        "AlertLabValuesOutOfRange": true,
        "AlertExamsExpiring": true,
        "AlertExamExpiryDays": 30,
        "AlertMaintenanceDue": true,
        "AlertMaintenanceDays": 7
    },

    "Export": {
        "CSVDelimiter": ";",
        "Encoding": "UTF-8",
        "DefaultFormat": "PDF"
    },

    "Performance": {
        "EnableCaching": true,
        "CacheDurationMinutes": 10
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "System": "Warning"
        }
    }
}
